	if( !g_bLeft4Dead2 )
		PrecacheModel(MODEL_AMMO_L4D1, true);
	PrecacheModel(MODEL_AMMO_L4D, true);
	PrecacheModel(MODEL_AMMO_L4D2, true);
	PrecacheModel(MODEL_AMMO_L4D3, true);
}

